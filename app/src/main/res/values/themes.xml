<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Selecator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="scrollbarColor">@color/quite_transparent_white</item>
    </style>

    <style name="Theme.Selecator.BrandedLaunch" parent="Theme.Selecator">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@drawable/ic_launcher_playstore</item>
    </style>

    <style name="Theme.Selecator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Selecator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.Selecator.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.Selecator.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:actionBarStyle">@style/Widget.Theme.Selecator.ActionBar.Fullscreen</item>
        <item name="android:windowBackground">@null</item>
    </style>
</resources>